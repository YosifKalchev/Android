<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pc_light_gray">

    <Button
        android:id="@+id/btnPlayer1"
        android:textColor="@color/pc_light_gray"
        android:layout_width="@dimen/btn_size_medium"
        android:layout_height="@dimen/btn_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPlayer2"
        android:textColor="@color/pc_light_gray"
        android:layout_width="@dimen/btn_size_medium"
        android:layout_height="@dimen/btn_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPlayer3"
        android:textColor="@color/pc_light_gray"
        android:layout_width="@dimen/btn_size_medium"
        android:layout_height="@dimen/btn_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnPlayer4"
        android:textColor="@color/pc_light_gray"
        android:layout_width="@dimen/btn_size_medium"
        android:layout_height="@dimen/btn_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:background="@color/pc_dark_gray"
        android:textColor="@color/pc_light_gray"
        android:id="@+id/txtPreQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>