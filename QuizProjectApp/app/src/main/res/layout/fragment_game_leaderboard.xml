<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pc_light_gray">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarGameTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pc_dark_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:titleTextColor="@color/pc_light_gray" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/topRecView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#4321"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarGameTab"
        app:layout_constraintVertical_weight="1"/>




</androidx.constraintlayout.widget.ConstraintLayout>